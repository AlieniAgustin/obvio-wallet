<section class="auth-form">
  <div class="auth-form-content">
    <div class="auth-form-content-header">Registrate</div>
    <form action="/register" method="post">

      <label for="name">Nombre de usuario</label>
      <input type="text" id="name" name="name" placeholder="Nombre de usuario" required />

      <label for="name">Dni</label>
      <input type="text" id="dni" name="dni" placeholder="Dni" required />

      <label for="reg-email">Email</label>
      <input type="email" id="reg-email" name="email" placeholder="E-mail" required />

      <label for="reg-password">Contraseña</label>
      <input type="password" id="reg-password" name="password" placeholder="Contraseña" required />

      <button type="submit">Registrarse</button>
    </form>
  </div>
</section>