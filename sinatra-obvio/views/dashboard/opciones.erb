<div class="dashboard-container gap-l">
    <!-- Profile Card -->
    <div class="cardblack blackBG w-full border-radius-small">
        <div class="persona">
            <div class="persona__avatar">
                <div style="position: relative;">
                    <img src="/assets/defaultAvatar.svg" alt="Avatar de <%= @user&.name || 'Julian Varga' %>" class="avatar avatar--s">
                    <div class="orangeBG border-radius-round icon-s flex justify-center items-center" style="position: absolute; bottom: 0; right: 0;">
                        <img src="/assets/icons/edit.svg" alt="edit icon" class="icon-s spacing-xs">
                    </div>
                </div>
            </div>
            <div class="persona__datosPersona">
                <p class="name"><%= @user&.name || 'Julian Varga' %></p>
                <p class="email"><%= @user&.email || 'julianvarga4@gmail.com' %></p>
            </div>
        </div>
    </div>

    <!-- Datos Personales -->
    <div class="cardblack blackBG w-full border-radius-small">
        <!-- Profile Information -->
        <a href="opciones-info-personal" class="flex justify-between items-center spacing-m text-primary list-item transition-smooth border-bottom-light-gray">
            <span>Información personal</span>
            <img src="/assets/icons/arrowright.svg" alt="edit icon" class="icon">
        </a>

        <!-- Datos de la cuenta-->
        <a href="opciones-info-cuenta" class="flex justify-between items-center spacing-m text-primary list-item transition-smooth border-bottom-light-gray">
            <span>Datos de tu cuenta</span>
            <img src="/assets/icons/arrowright.svg" alt="edit icon" class="icon">
        </a>

        <!-- Notificaciones -->
        <a href="#" class="flex justify-between items-center spacing-m text-primary list-item transition-smooth border-bottom-light-gray">
            <span>Notificaciones</span>
            <img src="/assets/icons/arrowright.svg" alt="edit icon" class="icon">
        </a>

        <!-- Lorem -->
        <a href="#" class="flex justify-between items-center spacing-m text-primary list-item transition-smooth border-bottom-light-gray">
            <span>Lorem</span>
            <img src="/assets/icons/arrowright.svg" alt="edit icon" class="icon">
        </a>

        <!-- Ipsum -->
        <a href="#" class="flex justify-between items-center spacing-m text-primary list-item transition-smooth border-bottom-light-gray">
            <span>Ipsum</span>
            <img src="/assets/icons/arrowright.svg" alt="edit icon" class="icon">
        </a>

        <!-- Logout -->
        <a href="/" class="flex justify-between items-center spacing-m text-primary list-item transition-smooth text-warning" onmouseover="this.style.backgroundColor='rgba(255, 68, 68, 0.1)'" onmouseout="this.style.backgroundColor='transparent'">
            <span>Cerrar sesión</span>
        </a>
    </div>
</div>
