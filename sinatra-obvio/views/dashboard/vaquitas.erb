<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Vaquitas</title>
  
</head>
<body>

  <div class="dashboard-container w-full">
    <div class="main-content w-full">
      <h1 class="page-title text-left">Vaquitas</h1>

      <div class="new-vaquita-wrapper">
        <button class="btn plus-button">
          <span class="plus-icon">+</span>
        </button>
        <span class="new-vaquita-text">Nueva vaquita</span>
      </div>

      <div class="empty-state" style="display: none;">
        <div class="empty-icon">🐄</div>
        <p>Aún no creaste ninguna vaquita</p>
      </div>

      <div class="list vaquitas-list w-full" style="display: none;">
        <!-- Se llenará con JS -->
      </div>
    </div>
  </div>

  <script>
    const vaquitas = [
      { img: "https://pbs.twimg.com/media/FtclnUDWAAAiMBr.jpg", titulo: "Vaquita 1", montoRecaudado: 3000, montoObjetivo: 5000 },
      { img: "https://lastfm.freetls.fastly.net/i/u/ar0/ad2315f72833948829e015ba8ad0f4bd.jpg", titulo: "Vaquita 2", montoRecaudado: 1500, montoObjetivo: 2000 }
    ];

    const emptyState = document.querySelector('.empty-state');
    const vaquitasList = document.querySelector('.vaquitas-list');

    if (vaquitas.length === 0) {
      emptyState.style.display = 'block';
      vaquitasList.style.display = 'none';
    } else {
      emptyState.style.display = 'none';
      vaquitasList.style.display = 'flex';
      vaquitasList.innerHTML = '';

      vaquitas.forEach(v => {
        const item = document.createElement('div');
        item.className = 'list-item vaquita-item';

        item.innerHTML = `
          <div class="vaquita-content">
            <div class="flex align-center gap-16">
              <img src="${v.img}" alt="${v.titulo}" class="vaquita-image" />
              <div class="vaquita-info">
                <div class="vaquita-title">${v.titulo}</div>
              </div>
            </div>
            <div class="vaquita-amount">
              $${v.montoRecaudado} / $${v.montoObjetivo}
            </div>
          </div>
        `;
        vaquitasList.appendChild(item);
      });
    }
  </script>

</body>
</html>
